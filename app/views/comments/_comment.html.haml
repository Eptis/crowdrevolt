/ - raise comment.inspect
%article.comment
  .useravatar
    - if comment.user
      =image_tag comment.user.avatar.url(:portrait)
    -else
      %img{:src => "http://placehold.it/150x150"}
  - if comment.user == current_user && logged_in?
    =link_to "X", path, :method => :delete, :class => "pull-right"
  .content

    - if comment.user_id.present?
      %h3=link_to comment.user.username, comment.user
    - else
      %h3= comment.name
    .text= clean(comment.body)


