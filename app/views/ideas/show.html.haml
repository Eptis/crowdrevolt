.row-fluid
  %section.span18
    .spacing
      .row-fluid
        %section.idea_show
          %article
            .general
              %h1= @idea.title
              %time= l(@idea.created_at, :format => :full)

            .row-fluid
              %aside.span7.karma
                %author#author= render :partial => "users/user", :locals => {:user => @idea.user}
                %h4 Karma op dit idee
                -if @idea.user == current_user
                  .clearfix=link_to t("ideas.edit_idea"), [:edit, @channel, @idea] ,:class => "pull-right btn"
                -elsif logged_in?
                  #appreciableCounter= "Aantal waarderingen: " + @idea.appreciables.count.to_s
                  .btn.appreciableBtn#appreciableBtn{:class => ("holy" if @idea.appreciables.collect(&:user_id).include?(current_user.id))} Karma +1
                  =render "appreciable_form"
              .span16.offset1.ideacontent
                .text=raw @idea.description
                .image
                  %img{:src => "http://placehold.it/700x360"}
            .row-fluid
              %article
              - @idea.blogitems.each do |item|
                = render "item", :item => item
    -if FunctionConfig.allowed?(:comments)
      .row-fluid
        %section.blogcenter
          .spacing
            %h3 Comments
            .row-fluid
              = render "commentform"
              - @idea.comments.each do |comment|
                = render comment

  %aside.span6.sidebar
    .sloper.black
      .slopershape
    .spacing
      %section.ideeen_box
        %article
          %h4 Andere ideeen
          %ul
            - @channel.ideas.each do |challenge|
              %li=link_to challenge.title, [@channel, challenge]
    .slopel.black
      .slopelshape




