- model_class = Episode
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      / %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:body)
      %th= model_class.human_attribute_name(:published_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @channels.each do |channel|
      %tr
        / %td= link_to channel.id, admin_channel_path(channel)
        %td= channel.title
        %td=raw truncate(channel.description, :length => 80)
        %td= channel.published_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), [:edit, :admin, channel], :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), [:admin, channel], :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), [:new, :admin, :channel], :class => 'btn btn-primary'
