- model_class = User
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @user.email
%p
  %strong= model_class.human_attribute_name(:password_digest) + ':'
  %br
  = @user.password_digest
%p
  %strong= model_class.human_attribute_name(:first_name) + ':'
  %br
  = @user.first_name
%p
  %strong= model_class.human_attribute_name(:prefix) + ':'
  %br
  = @user.prefix
%p
  %strong= model_class.human_attribute_name(:last_name) + ':'
  %br
  = @user.last_name
%p
  %strong= model_class.human_attribute_name(:remember_token) + ':'
  %br
  = @user.remember_token
%p
  %strong= model_class.human_attribute_name(:optin) + ':'
  %br
  = @user.optin
%p
  %strong= model_class.human_attribute_name(:accepted) + ':'
  %br
  = @user.accepted
%p
  %strong= model_class.human_attribute_name(:password_reset) + ':'
  %br
  = @user.password_reset

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_users_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_user_path(@user), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_user_path(@user), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
