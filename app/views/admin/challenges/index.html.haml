= link_to t('back', :default => t("helpers.links.back")), [:admin, @channel], :class => 'btn back'
- model_class = Challenge
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
= link_to t('.new', :default => t("helpers.links.new")), [:new, :admin, @channel, :challenge], :class => 'btn btn-primary'
%table.table
  %thead
    %tr
      / %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:active)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @challenges.each do |challenge|
      %tr
        / %td= link_to challenge.id, admin_post_path(challenge)
        %td=link_to challenge.title, [:admin, @channel, challenge]
        %td=raw truncate(challenge.description, :length => 80)
        %td= challenge.active
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), [:edit, :admin, challenge.channel, challenge], :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), [:admin, challenge.channel, challenge], :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Weet je het zeker? Als gebruikers hier oplossingen onder hebben geplaatst worden deze verwijderd en verdwijnen de punten de ze hiermee verdient hebben ook')) }, :class => 'btn btn-mini btn-danger'

