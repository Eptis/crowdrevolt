- model_class = Challenge
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  =raw @challenge.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  =raw @challenge.description

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), [:admin, @channel], :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), [:edit, :admin, @channel, @challenge], :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), [:admin, @channel, @challenge], :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
