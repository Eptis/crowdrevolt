- model_class = Post
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      / %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:body)
      %th= model_class.human_attribute_name(:published_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @posts.each do |post|
      %tr
        / %td= link_to post.id, admin_post_path(post)
        %td= post.title
        %td=raw truncate(post.description, :length => 80)
        %td=raw truncate(post.body, :length => 100)
        %td= post.published_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), [:edit, :admin, post], :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), [:admin, post], :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), [:new, :admin, :post], :class => 'btn btn-primary'
