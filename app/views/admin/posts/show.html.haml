- model_class = Post
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  =raw @post.title
%p
  %strong= model_class.human_attribute_name(:published_at) + ':'
  %br
  =raw @post.published_at
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  =raw @post.description
/ %p
/   %strong= model_class.human_attribute_name(:body) + ':'
/   %br
/   =raw @post.body
.row
  .span12
    - @post.blogitems.each do |item|
      = render "item", :item => item

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), [:admin, @channel], :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), [:edit, :admin, @channel, @post], :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), [:admin, @channel, @post], :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
