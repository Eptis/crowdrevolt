.page-header
  %h1= t(:text)
%table.table
  %thead
    %tr
      / %th= model_class.human_attribute_name(:title)
      %th Waar?
      %th Omschrijving
      %th Inhoud
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @texts.each do |text|
      %tr
        / %td= link_to text.id, admin_text_path(text)
        %td=link_to text.title, [:edit, :admin, text]
        %td=text.description
        %td=raw truncate(text.body, :length => 80)
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), [:edit, :admin, text], :class => 'btn btn-mini'

