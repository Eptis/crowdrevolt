- model_class = Channel
.page-header
  %h1=t '.title', :default => model_class.model_name.human
.form-actions
  =link_to :episode, [:new, :admin, @channel, :episode]
%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  =raw @channel.title
%p
  %strong= model_class.human_attribute_name(:status) + ':'
  %br
  =raw @channel.status
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  =raw @channel.description

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_root_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), [:edit, :admin, @channel], :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_post_path(@channel), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'


.page-header
  - @channel.episodes.each do |episode|
    %p=link_to episode.title, [:admin, @channel, episode]