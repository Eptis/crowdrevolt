= link_to t('back', :default => t("helpers.links.back")), [:admin, @channel], :class => 'btn back'
.page-header
  - if @channel.new_record?
    %h1= t('admin.posts')
  - else
    %h1= @channel.title
= simple_nested_form_for([:admin, @channel]) do |f|
  .row
    - if @channel.errors.any?
      -@channel.errors.each do |message|
        %p= message
  .row
    .span12
      / = f.input :tag_list
    .span12
      / = f.category_select
    .span12
      = f.image_select
    / .span12
    /   = f.input :published_at, :as => :datetimepicker, :input_html => { :value => @channel.published_at_form }
  .row
    .span12
      = f.input :title
      = f.input :description, :as => :editor, :required => false

      .spacing= f.association :admins,:label_method => :username,   :as => :check_boxes
      = f.input :status, :as => :text

      / = f.input :description
      / = f.input :body, :as => :editor
      / = f.input :body



  .row
    .span12= f.submit(:class => "btn btn-primary")
