- model_class = ContactQuestion
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:question)
      %th= model_class.human_attribute_name(:answer)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
  - @contact_questions.each do |question|
    %tr
      %td= question.id
      %td= question.question
      %td= question.answer
      %td= question.created_at
      %td
        = link_to t('.edit', :default => t("helpers.links.edit")), [:edit, :admin, question], :class => 'btn btn-mini'
        = link_to t('.destroy', :default => t("helpers.links.destroy")), [:admin, question], :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'


= link_to t('.new', :default => t("helpers.links.new")), [:new, :admin, :contact_question], :class => 'btn btn-primary'
