= simple_nested_form_for(@post) do |f|
  .row
    - if @post.errors.any?
      -@post.errors.each do |message|
        %p= message
  .row
    .span12
      / = f.input :tag_list
    .span12
      / = f.category_select
    .span12
      = f.image_select
    .span12
      = f.input :published_at, :as => :datetimepicker, :input_html => { :value => @post.published_at_form }
  .row
    .span12
      = f.input :title
      = f.input :description, :as => :editor
      / = f.input :description
      / = f.input :body, :as => :editor
      / = f.input :body
  .row
    .span12
      = f.simple_fields_for :blogitems do |item|
        = render :partial => 'items', :locals => { :f => item }
        = item.link_to_remove "Verwijder blok"
      %p= f.link_to_add "Voeg een onderdeel toe", :blogitems



  .row
    .span12= f.submit(@post.new_record? ? :posts : @post)


