= form_tag user_sessions_path, :method => :post do
  .field
    = label_tag :username
    = text_field_tag :username
  .field
    = label_tag :password
    = password_field_tag :password
  .field
    = check_box_tag :remember, 1, false, :class => 'pull-left'
    = label_tag :remember, nil, :class => 'pull-left checkbox'
  .clear
  .pull-left.actions
    = submit_tag "Login"
  .pull-left.password_toggle= link_to "wachtwoord vergeten?", new_password_reset_path
