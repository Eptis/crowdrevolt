= form_tag user_sessions_path, :method => :post do
  .field
    = label_tag :username
    = text_field_tag :username
  .field
    = label_tag :password
    = password_field_tag :password
  .field
    = check_box_tag :remember
    = label_tag :remember
  .actions
    = submit_tag "Login"
  .password_toggle= link_to "wachtwoord vergeten?", new_password_reset_path
