.slopel.menu.black
  .slopershape
.row-fluid
  %section.span24
    %article.intro
      .spacing
        .row-fluid
          .homespacefix
          %h1.span16 Slimme oplossingen voor oude ideeen
          .span8.pull-right.text
            %p Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla vitae elit libero, a pharetra augue. Morbi leo risus, porta ac consectetur ac, vestibulum at eros. Sed posuere consectetur est at lobortis. Nulla vitae elit libero, a pharetra augue. Meer informatie kun je vinden bij Karma & Rewards
            .btn Meld je aan!
            .homespacefix
.row-fluid.spacefix
  .slopel.orange
    .slopelshape
  .row-fluid
    %section.volgende_uitzending.span24.v-spacing.highlight
      -if @live || @upcoming
        .row-fluid
          %article.span24
            .spacing.showcenter
              - if @live
                %h3
                  .icon.Episode.white
                  = t("now_live")
                %h2= @live.title
                .row-fluid
                  .span8
                    =link_to [@live.channel, @live] do
                      - if @live.image
                        =image_tag @live.image.url(:front)
                  .span9
                    =link_to [@live.channel, @live] do
                      %h2= @live.title

                    %time= l(@live.airdate, :format => :full)
                    .text
                      =smart_truncate(strip_tags(@live.description), :words => 40).html_safe
                      =link_to t("more"), [@live.channel, @live]

              - elsif @upcoming

                .row-fluid
                  .rotate
                    .span8
                      / .imgmask
                      =link_to [@upcoming.channel, @upcoming] do
                        - if @upcoming.image
                          =image_tag @upcoming.image.url(:front)
                    .span16
                      %h3
                        .icon.Episode.white
                        = t("channels.next_episode")
                      =link_to [@upcoming.channel, @upcoming] do
                        %h2= @upcoming.title
                      %time= l(@upcoming.airdate, :format => :full)
                      .text
                        =smart_truncate(strip_tags(@upcoming.description), :words => 40).html_safe
                        =link_to t("more"), [@upcoming.channel, @upcoming]
  .sloper.orange
    .slopershape
.clear
.row-fluid.spacefix
  .slopel.grey
    .slopelshape
  .row-fluid
    %aside.span24.sidebar
      .spacing
        %h3 Activiteiten
        .row-fluid
          - @recent.each do |recent|
            -if recent.class == Post ||  recent.class == Idea
              .span8
                %h4
                  .icon{:class => "#{recent.type.to_s}"}
                  = recent.title
                .text=smart_truncate(strip_tags(recent.description), :words => 20).html_safe
                =link_to "Lees meer", [recent.channel, recent]
            - elsif recent.class == Solution
              .span8
                %h4
                  .icon{:class => "#{recent.type.to_s}"}
                  = recent.title
                .text=smart_truncate(strip_tags(recent.description), :words => 20).html_safe
                =link_to "Lees meer", [recent.challenge.channel , recent.challenge, recent]
  .sloper.grey
    .slopershape

.row-fluid
  %section.programmas.span24
    .spacing
      %h2
        .icon.Channel
        = t("channels.channels")
      -@channels.each do |channel|
        .row-fluid
          %article.span24
            %h2= channel.title

            .row-fluid
              .span12
                .text=raw channel.description
              .span12
                .spacing
                  .span12
                    %img{:src => "http://placehold.it/250x140"}
                  .span12
                    %h5 Volgende livestream
                    %p Maecenas faucibus mollis interdum. Vivamus sagittis.

