%hr
.btn.pull-right.clearsearch X
.spacing
  -if @searchresults.empty?
    .noresults= t("no_results")
  -if @searchresults.present?
    %h1 resultaten

    .row-fluid

      - @searchresults.each do |results|
        - if results.length > 0
          %ul.itemlist
            - if results[0].class == Post
              %h3.resultheader Artikelen
            - elsif results[0].class == Channel
              %h3.resultheader Programma's
            - elsif results[0].class == Episode
              %h3.resultheader Livestreams
            - elsif results[0].class == Idea
              %h3.resultheader IdeeÃ«n
            - elsif results[0].class == Solution
              %h3.resultheader Oplossingen
            - results.each do |result|
              %li
                %h3=link_to result.title, searchlink(result)
                .text=smart_truncate(strip_tags(result.description), :words => 20).html_safe
                =link_to t("more"), searchlink(result), :class => "btn more pull-right"
                .clear



%hr

