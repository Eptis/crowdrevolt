= simple_form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.input :username, :input_html => { :class => "makeitbig"}
  .field
    = f.input :email, :input_html => { :class => "makeitbig"}
  .field
    %label= t("avatar")
    = f.file_field :avatar
  .field.form-inline
    .pull-left= f.input :skypename
    .pull-left= f.input :show_skype
  .clear
  .field.form-inline
    .pull-left= f.input :password
    .pull-left= f.input :password_confirmation
  .clear
  .field
    =f.input :bio, :input_html => {:rows => 10}

  .actions
    = f.submit 'Save', :class => "btn"
