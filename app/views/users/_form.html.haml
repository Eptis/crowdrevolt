= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f|
  = f.input :email
  = f.input :password
  = f.input :password_confirmation
  = f.input :first_name
  = f.input :prefix
  = f.input :last_name
  = f.input :remember_token
  = f.input :optin
  / = f.input :accepted
  / = f.input :password_reset
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), users_path, :class => 'btn'
- if @user.errors.any?
  -@user.errors.each do |message|
    %p= message
